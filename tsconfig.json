{
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2015", "es2017", "dom"],
    "outDir": "./lib",
    "types": ["webpack-env"]
  },
  "exclude": ["node_modules", "bundles", "coverage", "build", "**/*.spec.ts", "**/*.spec.tsx"]
}
